{
    "securitypolicies": [{
        "name": "policy1",
        "description": "Policy for opening tcp 80,443 and udp 53,16000-16100 ports.",
        "direction": "ingress",
        "applied_to": [{
            "tenant": "tenant1",
            "segment": "segment1"
        }, {
            "tenant": "admin",
            "segment": "frontend"
        }],

        "peers": [{
            "cidr": "0.0.0.0/0"
        }],
        "rules": [{
            "protocol": "tcp",
            "ports": [80, 443]
        }, {
            "protocol": "udp",
            "ports": [53],
            "port_ranges": [16000, 16100]
        }]
    }, {
        "name": "policy2",
        "description": "Policy for icmp echo request reply message.",
        "direction": "ingress",
        "applied_to": [{
            "tenant": "demo",
            "segment": "backend"
        }],

        "peers": [{
            "cidr": "0.0.0.0/0"
        }],
        "rules": [{
            "protocol": "icmp",
            "icmp_type": 0
        }, {
            "protocol": "icmp",
            "icmp_type": 8
        }]
    }]
}
